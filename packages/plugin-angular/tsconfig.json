{
  "files": [ "./src/index.ts" ],
  "compilerOptions": {
    "module": "ES2015",
    "target": "ES2015",
    "lib": [ "ES5", "ES6", "DOM" ],
    "allowJs": false,
    "declaration": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "outDir": "./dist/esm2015",
    "rootDir": "./src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "sourceRoot": "src",
    "experimentalDecorators": true,
    "skipLibCheck": true
  }
}
