{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["dom", "es5"],
    "module": "commonjs",
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [],
    "typeRoots": []
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
